//Fonction Accueil

function inscription( e ) {
    e.preventDefault();
    //Business
    if ( verifChampVide( "Insc" ) !== false ) {
        var o = FORMtoJSON( "Insc" );
        ajCon( "insc", o );
    }
    //Ajax
}

function connexion( e ) {
    e.preventDefault();
    //Business
    if ( verifChampVide( "Conn" ) !== false ) {
        console.log( "Ok!" );
        var o = FORMtoJSON( "Conn" );
        ajCon( "conn", o );
    }
}

function ajCon( action, json ) {
    //Ajax
    $.ajax( {
        url: "/app",
        type: "POST",
        data: "action=/" + action + "&json=" + JSON.stringify( JSON.parse( json ) ),
        success:
        function( e ) {
            if ( e === "OK" ) {
                if ( action === "conn" ) {
                    console.log(e);
                    connOk();
                } else {
                    console.log(e);
                    inscOk();
                }
            }else if (e === "NOK"){
                console.log("NOK");
            }
        },
        error:
        function( e ) {
            console.log( e );
        }
    });
}

